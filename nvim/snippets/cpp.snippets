extends c

snippet binary_search "binary search"
  int binary_search(const std::vector<int>& vec, int target) {
      int left = 0;
      int right = vec.size() - 1;

      while (left <= right) {
          int mid = left + (right - left) / 2;

          if (vec[mid] == target) {
              return mid;
          } else if (vec[mid] < target) {
              left = mid + 1;
          } else {
              right = mid - 1;
          }
      }

      return -1;
  }
