#!/bin/bash

cd "$(dirname "${BASH_SOURCE[0]}")" || exit 1

if command -v curl 2>/dev/null; then
  DL="curl --insecure -fLo"
elif command -v wget 2>/dev/null; then
  DL="wget -O"
fi

# RC files
# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  $DL ~/.git-prompt.sh https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
fi

BASE=$(pwd)

# Handle new modular shell configuration
mkdir -pv bak

# Backup existing shell configs
[ -e ~/.bashrc ] && mv -v ~/.bashrc bak/.bashrc
[ -e ~/.zshrc ] && mv -v ~/.zshrc bak/.zshrc
[ -e ~/.shellrc.common ] && mv -v ~/.shellrc.common bak/.shellrc.common
[ -e ~/.shellrc.bash ] && mv -v ~/.shellrc.bash bak/.shellrc.bash
[ -e ~/.shellrc.zsh ] && mv -v ~/.shellrc.zsh bak/.shellrc.zsh

# Install new modular shell configuration
if [ -d "$BASE/bashrc_update" ]; then
  echo "Installing new modular shell configuration..."

  # Create symbolic links for shell configuration modules
  ln -sfv "$BASE/bashrc_update/shellrc.common" ~/.shellrc.common
  ln -sfv "$BASE/bashrc_update/shellrc.bash" ~/.shellrc.bash
  [ -f "$BASE/bashrc_update/shellrc.zsh" ] && ln -sfv "$BASE/bashrc_update/shellrc.zsh" ~/.shellrc.zsh

  # Create simplified .bashrc that sources from home directory
  cat > ~/.bashrc << 'EOF'
#!/usr/bin/env bash
# .bashrc - Bash configuration entry point

# Load common shell configuration
[ -f "$HOME/.shellrc.common" ] && source "$HOME/.shellrc.common"

# Load bash-specific configuration
[ -f "$HOME/.shellrc.bash" ] && source "$HOME/.shellrc.bash"

# Load local customizations if they exist
[ -f "$HOME/.bashrc.local" ] && source "$HOME/.bashrc.local"
EOF

  # Create simplified .zshrc if zsh config exists
  if [ -f "$BASE/bashrc_update/zshrc.new" ]; then
    cat > ~/.zshrc << 'EOF'
#!/usr/bin/env zsh
# .zshrc - Zsh configuration entry point

# Load common shell configuration
[ -f "$HOME/.shellrc.common" ] && source "$HOME/.shellrc.common"

# Load zsh-specific configuration
[ -f "$HOME/.shellrc.zsh" ] && source "$HOME/.shellrc.zsh"

# Load local customizations if they exist
[ -f "$HOME/.zshrc.local" ] && source "$HOME/.zshrc.local"
EOF
  fi
else
  echo "New modular shell configuration not found, falling back to old bashrc..."
  ln -sfv "$BASE/bashrc" ~/.bashrc
fi

# Handle other rc files
for rc in vimrc tmux.conf alacritty.yml; do
  [ -e ~/."$rc" ] && mv -v ~/."$rc" bak/."$rc"
  ln -sfv "$BASE/$rc" ~/."$rc"
done
terminalrc=$HOME/.config/xfce4/terminal/terminalrc
[ -e $terminalrc ] && mv -v $terminalrc bak/terminalrc
ln -sfv "$BASE/xfce4_terminal" $terminalrc

source ~/.bashrc

[ -e ~/.ssh/config ] && mv -v ~/.ssh/config bak/ssh_config
mkdir -p ~/.ssh && ln -sfv "$BASE"/ssh_config ~/.ssh/config

[ -e ~/.config/zathura/zathurarc ] && mv -v ~/.config/zathura/zathurarc bak/
mkdir -p ~/.config/zathura && ln -sfv "$BASE/zathura_config" ~/.config/zathura/zathurarc

[ -e ~/.emacs.d/custom-post.el ] && mv -v ~/.emacs.d/custom-post.el bak/
mkdir -p ~/.emacs.d && ln -sfv "$BASE/custom-post.el" ~/.emacs.d

git config --global user.email "jkunlin@gmail.com"
git config --global user.name "jkunlin"

if [ ! -e ~/.tmux/plugins/tpm ]; then
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
  tmux source-file ~/.tmux.conf
fi

if [ ! -e ~/.fonts/SourceCodePro ]; then
  mkdir -p ~/.fonts/SourceCodePro
  $DL ~/.fonts/SourceCodePro/SourceCodePro.zip https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/SourceCodePro.zip
  cd ~/.fonts/SourceCodePro
  unzip SourceCodePro.zip
  rm SourceCodePro.zip
  cd -
fi
fc-cache -rv

if [ ! -e ~/.fonts/FiraCode ]; then
  mkdir -p ~/.fonts/FiraCode
  $DL ~/.fonts/FiraCode/FiraCode.zip https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/FiraCode.zip
  cd ~/.fonts/FiraCode
  unzip FiraCode.zip
  rm FiraCode.zip
  cd -
fi
fc-cache -rv

# Install software packages
#######################################################################
echo "Starting software installation..."
if [ -f "$BASE/install_software.sh" ]; then
  bash "$BASE/install_software.sh"
else
  echo "Warning: install_software.sh not found. Skipping software installation."
fi
