{
  "snippets.extends": {
    "cpp": [
      "c"
    ]
  },
  "snippets.ultisnips.directories": [
    "~/.vim/mysnippets/"
  ],
  "diagnostic.refreshOnInsertMode": true,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    }
  }
}
